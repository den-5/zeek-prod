# Database Configuration (REQUIRED)
DB_URL=mongodb://localhost:27017/your-database-name
# Or for MongoDB Atlas:
# DB_URL=mongodb+srv://username:password@cluster.mongodb.net/database-name

# JWT Secret Keys (REQUIRED)
JWT_SECRET=your_jwt_secret_key_here
ADMIN_SECRET=your_admin_secret_key_here

# Server Configuration
PORT=4000
FRONTEND_URL=http://localhost:3000

# OPTIONAL: Email Configuration (Currently disabled for local development)
# Uncomment and configure these when you want to enable email functionality
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password_here

# OPTIONAL: Crypto Payment Gateway (Currently disabled for local development)
# Uncomment and configure these when you want to enable crypto payments
# API_KEY=your_cryptocloud_api_key_here
# SHOP_ID=your_cryptocloud_shop_id_here
# SECRET_KEY_CRYPTO=your_crypto_secret_key_here

# Note: New users automatically receive $20 starting balance
